<body>

<div class="container">
    <h1>Global Market Hours</h1>

    <div class="timezone-toggle">
        <label for="timezone">Select Your Timezone:</label>
        <select id="timezone" onchange="updateMarketHours()">
            <!-- Time zone options will be dynamically populated -->
        </select>
    </div>

    <div id="map"></div>

    <table>
        <thead>
            <tr>
                <th>Market</th>
                <th>Open (Local Time)</th>
                <th>Close (Local Time)</th>
            </tr>
        </thead>
        <tbody id="market-hours">
            <!-- Market hours will be populated dynamically -->
        </tbody>
    </table>
</div>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script>
    const marketHours = {
        forex: {
            sydney: { open: 22, close: 7 },
            tokyo: { open: 0, close: 9 },
            london: { open: 8, close: 17 },
            newYork: { open: 13, close: 22 }
        },
        stock: {
            nyse: { open: 14.5, close: 21 },
            comex: { open: 13.33, close: 18.5 }
        }
    };

    // Get the current time zone and detect DST
    const timeZones = Intl.supportedValuesOf('timeZone');
    const timezoneSelect = document.getElementById('timezone');

    timeZones.forEach(zone => {
        const option = document.createElement('option');
        option.value = zone;
        option.text = zone.replace('_', ' ');
        timezoneSelect.add(option);
    });

    function isDST(timeZone) {
        const now = new Date();
        const jan = new Date(now.getFullYear(), 0, 1);
        const jul = new Date(now.getFullYear(), 6, 1);
        return jan.getTimezoneOffset() !== jul.getTimezoneOffset();
    }

    function updateMarketHours() {
        const selectedZone = timezoneSelect.value;
        const inDST = isDST(selectedZone);

        const rows = document.getElementById('market-hours');
        rows.innerHTML = ''; // Clear table rows

        for (const [market, times] of Object.entries(marketHours)) {
            for (const [session, hours] of Object.entries(times)) {
                const openLocal = convertTimeZone(hours.open, selectedZone, inDST);
                const closeLocal = convertTimeZone(hours.close, selectedZone, inDST);

                const row = `<tr>
                                <td>${session}</td>
                                <td>${openLocal}</td>
                                <td>${closeLocal}</td>
                             </tr>`;
                rows.innerHTML += row;
            }
        }
    }

    function convertTimeZone(hour, timeZone, inDST) {
        const now = new Date();
        const utcHour = new Date(now.getUTCFullYear(), now.getUTCMonth(), now.getUTCDate(), hour).getUTCHours();
        const localTime = new Date(Date.UTC(now.getUTCFullYear(), now.getUTCMonth(), now.getUTCDate(), utcHour));
        localTime.toLocaleString('en-US', { timeZone });

        const offset = inDST ? 1 : 0;
        return localTime.getHours() + offset;
    }

    // Initialize Leaflet Map
    const map = L.map('map').setView([51.505, -0.09], 2);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    map.on('click', function (e) {
        alert("Coordinates: " + e.latlng); // Can use this to map coordinates to time zones
    });

    // Initialize with default timezone
    updateMarketHours();
</script>

</body>
</html>
